<style>
  .ancho{
    width: 7%;
  }
</style>
<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="table-responsive">
  
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td class="ancho"><%= link_to 'Show', product, class: 'btn btn-default btn-xs' %></td>
          <td class="ancho"><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default btn-xs' %></td>
          <td class="ancho"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-default btn-lg' %>
